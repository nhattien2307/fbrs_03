<div class="col-md-6 col-md-offset-3">
  <div class="new-book-form">
    <h2><%= t("change_pass") %></h2>
    <%= simple_form_for(resource, as: resource_name,
      url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs">
        <%= f.input :password, label: t("new_pass"), required: true, autofocus: true,
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: t("confirm_pass"), required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, t("change_pass"), class: "btn-custom2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
